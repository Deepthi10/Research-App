<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.odu.mra.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/additionalinfo"
        android:textStyle="bold"

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/Linearstartdate">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Survey Start Date :"
                android:layout_weight="1"
                android:id="@+id/stDtTitle"
                android:layout_marginLeft="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startdate"
                android:layout_weight="1"
                android:layout_marginRight="30dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Linearenddate"
        android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Survey End Date :"
                android:layout_weight="1"
                android:id="@+id/midasTitle"
                android:layout_marginLeft="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/enddate"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="30dp" />
        </LinearLayout>

        <TableRow  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="PI Details :"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="40sp" />

        </TableRow>

      <ListView
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:id="@+id/piListview">

      </ListView>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:id="@+id/copitablerow"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Co-PI Details :"
                android:layout_weight="2"
                android:id="@+id/copiTitle"
                android:textColor="#ffffff"
                android:layout_marginLeft="40sp" />

        </TableRow>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copilist" />




</LinearLayout>
