<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvOptOutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Please take a minutes to tell us your reason for opting out of the survey"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/etOptOutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="@drawable/rectangle_black"
        android:maxLength="256"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:maxLines="6"
        android:ellipsize="end"
        android:minLines="6"
        android:textAlignment="gravity"
        android:gravity="top"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/btnOptOutSurvey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Opt Out from the Survey"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />


</LinearLayout>