<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSurveyListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="50dp"
            android:text="Test Study for Documentation"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSurveyListEnrollment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enrollment is allowed between 09/28/2015 and 10/31/2015"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.29" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Enrolled"
                android:id="@+id/tvSurveyListEnrollmentStatus"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="#003258"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="2dp" />
        </LinearLayout>
    </LinearLayout>